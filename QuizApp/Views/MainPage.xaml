<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.Views.MainPage"
             Title="QuizApp">
    <Grid
        RowDefinitions="*,*,auto">

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="auto,*,auto">
            <ImageButton
                Grid.Row="0"
                Grid.Column="0"
                Source="arrow_left_nav_icon.png"/>

            <Border
                Grid.Row="0"
                Grid.Column="1"
                Stroke="Gray"
                BackgroundColor="LightGray">
                <Label
                    Text="¿La peninsula de Yucatan se encuentra al norte de Mexico?"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"/>
            </Border>

            <ImageButton
                Grid.Row="0"
                Grid.Column="2"
                Source="arrow_right_nav_icon.png"/>

        </Grid>

        <HorizontalStackLayout
            Grid.Row="1"
            Grid.Column="0"
            Spacing="36"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Button
            Text="Cierto"/>
            <Button
            Text="Falso"/>
        </HorizontalStackLayout>

        <Label
            Margin="36"
            Grid.Row="2"
            Grid.Column="0"
            Text="¡Correcto!"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="Medium"/>

    </Grid>
</ContentPage>